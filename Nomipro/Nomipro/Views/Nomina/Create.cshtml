                @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Total, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" align="left">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-success" style="background-color:#2c3e50; border-color: white;" />
            </div>
        </div>
    </div>
}

<div align="left">
    <button type="button" class="btn btn-success" style="background-color:#2c3e50; border-color: white;" onclick="window.location.href = '/Nomina';">Regresar</button>
</div>

