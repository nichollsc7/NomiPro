@model IEnumerable<Nomipro.ModelDB.Nomina>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<h2>Nomina</h2>

<br />
<div>
    <button type="button" class="btn btn-success" style="background-color:#2c3e50; border-color: white;" onclick="window.location.href = '/Nomina/Create';">Agregar Cita</button>
</div>

<br />

<h2>Filterable Table</h2>
<p>Type something in the input field to search the table for first names, last names or emails:</p>
<input class="form-control" id="myInput" type="text" placeholder="Search..">
<br>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subtotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
            <span>Cargo</span>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Control_Pago.Mes)
        </th>
        <th>
            <span>Empleado</span>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Control_Pago.Mes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.Nombre)
            </td>
            <td>
                <div class="btn-group">
                    <button type="button" class="btn btn-light">@Html.ActionLink("Editar", "Edit", new { id = item.ID_Nomina })</button>
                    <button type="button" class="btn btn-light">@Html.ActionLink("Detalles ", "Details", new { id = item.ID_Nomina })</button>
                    <button type="button" class="btn btn-light">@Html.ActionLink("Eliminar", "Delete", new { id = item.ID_Nomina })</button>
                </div>
            </td>
        </tr>
    }
</table>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
